@model IEnumerable<FlightManager.Models.Flight>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FlightFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TakeOffTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LandingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlaneType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlaneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PilotName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlaneCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlaneBusinessClassCapacity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FlightFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlightTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TakeOffTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LandingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaneType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PilotName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaneCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaneBusinessClassCapacity)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FlightID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FlightID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FlightID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
